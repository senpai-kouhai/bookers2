<div class="container  mt-3 mb-5">
  <div class="row">
    <div class="col-3">
      <h2>User info</h2>
        <% if @user.profile_image.attached? %>
          <%= image_tag @user.profile_image, size: "100x100" %>
        <% else %>
          <%= image_tag 'default-image.jpg', size: "100x100" %>
        <% end %>

        <table class="table table-border-top-bottom mb-5">
          <tr>
            <th class="p-2">name</th>
            <th class="p-2"><%= @user.name %></th>
          </tr>
          <tr>
            <th class="p-2">introduction</th>
            <th class="p-2"><%= @user.introduction %></th>
          </tr>
        </table>

        <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block mb-3" do %>
        <i class="fas fa-user-cog"></i>
        <% end %>


      <h2>New book</h2>
        <%= form_with model: @book do |f| %>
        <div class="field">
          Title<br/>
          <%= f.text_field :title, class: "form-control", style: "border-color: #ccc; width: 250px; margin: 15px 0px;" %>
        </div>

        <div class="field">
          Opinion<br/>
          <%= f.text_area :body, class: "form-control", style: "border-color: #ccc; width: 250px; margin: 15px 0px;" %>
        </div>
          <%= f.submit "Create Book", class: "btn btn-success" %>
        <% end %>
    </div>

    <div class="col-8 offset-1">
      <h2>Books</h2>
      <% if Book.exists? %>
        <table class="table table-border-top-bottom mb-5">
          <thead>
            <tr>
              <th class="p-2 text-center"></th>
              <th class="p-2 text-center">Title</th>
              <th class="p-2 text-center">Opinion</th>
            </tr>
          </thead>

          <tbody>
          <% @books.each do |book| %>
            <tr>
              <td class="p-2 text-center">
                <% if @user.profile_image.attached? %>
                  <%= link_to user_path(@user) do %>
                    <%= image_tag @user.profile_image, size: "80x80" %>
                  <% end %>
                <% else %>
                  <%= link_to user_path(@user) do %>
                    <%= image_tag 'default-image.jpg', size: "80x80" %>
                  <% end %>
                <% end %>
              </td>
              <td class="p-2 text-center">
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td class="p-2 text-center"><%= book.body %></td>
            </tr>
          <% end %>
          </tbody>
        </table>

      <% else %>
        <table class="table table-border-top-bottom mb-5">
          <thead>
            <tr>
              <th class="p-2 text-center">Title</th>
              <th class="p-2 text-center">Opinion</th>
            </tr>
          </thead>
        </table>
      <% end %>
    </div>
  </div>
</div>
