<div class="container mt-3 mb-5">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>

      <% if @user.errors.any? %>
        <%= @user.errors.count %>件のエラーが発生しました
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>


      <%= form_with model: @user, method: :patch do |f| %>
      <div class="field">
        Name<br>
        <%= f.text_field :name, autofocus: true, class: "form-control", style: "border-color: #ccc; margin: 10px 0px;" %>
      </div>
      <div class="field">
        Image<br>
        <%= f.file_field :profile_image, accept: "image/*", style: "margin: 10px 0px;" %>
      </div>
      <div class="field">
        Introduction<br>
        <%= f.text_area :introduction, autofocus: true, class: "form-control", rows: 2, style: "border-color: #ccc; margin: 10px 0px;" %>
      </div>
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>