<div class="container  mt-3 mb-5">
  <div class="row">
    <div class="col-3">
      <h2>User info</h2>
        <% if @user.profile_image.attached? %>
          <%= image_tag(@user.profile_image) %>
        <% else %>
          <%= image_tag 'default-image.jpg', size: "100x100" %>
        <% end %>

        <table class="table table-border-top-bottom mb-5">
          <tr>
            <th class="p-2">name</th>
            <th class="p-2"><%= @user.name %></th>
          </tr>
          <tr>
            <th class="p-2">introduction</th>
            <th class="p-2"><%= @user.introduction %></th>
          </tr>
        </table>

        <a href="home_about_path" class="btn btn-outline-secondary btn-block mb-3"><i class="fas fa-user-cog"></i></a>


      <h2>New book</h2>
        <%= form_with model: @book do |f| %>
        <div class="field">
          Title<br/>
          <%= f.text_field :title, class: "form-control", style: "border-color: #ccc; width: 250px; margin: 15px 0px;" %>
        </div>

        <div class="field">
          Opinion<br/>
          <%= f.text_area :body, class: "form-control", style: "border-color: #ccc; width: 250px; margin: 15px 0px;" %>
        </div>
          <%= f.submit "Create Book", class: "btn btn-success" %>
        <% end %>
    </div>

    <div class="col-8 offset-1">
      <h2>Books</h2>
      <table class="table table-border-top-bottom mb-5">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>画像</td>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>