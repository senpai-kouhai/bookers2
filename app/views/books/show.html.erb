<div class="container  mt-3 mb-5">
  <div class="row">
    <div class="col-3">
      <h2>User info</h2>
        <% if @user.profile_image.attached? %>
          <%= image_tag @user.profile_image, size: "100x100" %>
        <% else %>
          <%= image_tag 'default-image.jpg', size: "100x100" %>
        <% end %>

        <table class="table table-border-top-bottom mb-5">
          <tr>
            <th class="p-2">name</th>
            <th class="p-2"><%= @user.name %></th>
          </tr>
          <tr>
            <th class="p-2">introduction</th>
            <th class="p-2"><%= @user.introduction %></th>
          </tr>
        </table>

        <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block mb-3" do %>
        <i class="fas fa-user-cog"></i>
        <% end %>


      <h2>New book</h2>
        <%= form_with model: @book do |f| %>
        <div class="field">
          Title<br/>
          <%= f.text_field :title, class: "form-control", style: "border-color: #ccc; width: 250px; margin: 15px 0px;" %>
        </div>

        <div class="field">
          Opinion<br/>
          <%= f.text_area :body, class: "form-control", style: "border-color: #ccc; width: 250px; margin: 15px 0px;" %>
        </div>
          <%= f.submit "Create Book", class: "btn btn-success" %>
        <% end %>
    </div>

    <div class="col-8 offset-1">
      <h2>Book detail</h2>
      <table class="table table-border-top-bottom mb-5">
        <tbody>
          <tr>
            <td class="p-2 text-center">
              <% if @user.profile_image.attached? %>
                <%= link_to user_path(@user) do %>
                  <%= image_tag @user.profile_image, size: "100x100" %>
                <% end %>
              <% else %>
                <%= link_to user_path(@user) do %>
                  <%= image_tag 'default-image.jpg', size: "100x100" %>
                <% end %>
              <% end %>
              <br><%= link_to user_path(@user) do %><%= @book_detail.user.name %><% end %>
            </td>
            <td class="p-2 text-center"><%= @book_detail.title %></td>
            <td class="p-2 text-center"><%= @book_detail.body %></td>
            <td class="p-2 text-center"><%= link_to "Edit", edit_book_path(@book_detail), class: "btn btn-success btn-sm" %></td>
            <td class="p-2 text-center"><%= link_to "Destroy", book_path, method: :delete, class: "btn btn-danger btn-sm", "data-confirm" => "本当に消しますか？" %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
