<% if @book.errors.any? %>
  <%= @book.errors.count %> error happened
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container mt-3 mb-5">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book, method: :patch do |f| %>
      <div class="field">
        Title<br>
        <%= f.text_field :title, autofocus: true, class: "form-control", style: "border-color: #ccc; margin: 10px 0px;" %>
      </div>
      <div class="field">
        Opinion<br>
        <%= f.text_area :body, autofocus: true, class: "form-control", rows: 2, style: "border-color: #ccc; margin: 10px 0px;" %>
      </div>
        <%= f.submit "Update Book", class: "btn btn-success" %>
      <% end %>
      <div class="mt-3">
      <%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</div>